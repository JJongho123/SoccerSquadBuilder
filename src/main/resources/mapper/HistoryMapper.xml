<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ssb.soccer.history.mapper.HistoryMapper">

    <insert id="createHistory" parameterType="HistoryRequestDto">
        INSERT INTO history (gpt_response_text, team_id, title, squad_type, created_at)
        VALUES (#{gptResponseText}, #{teamId}, #{title}, #{squadType}, #{createdAt})
    </insert>

    <select id="selectHistoryList" parameterType="int" resultType="History">
        SELECT * FROM history
        WHERE team_id = #{teamId}
    </select>

    <select id="selectHistoryDetail" parameterType="int" resultType="History">
        SELECT * FROM history
        WHERE id = #{historyId}
    </select>

</mapper>